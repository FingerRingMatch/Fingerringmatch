generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  firebaseId      String   @unique
  name            String
  dob             DateTime
  gender          String
  religion        String
  language        String
  phone           String
  email           String   @unique
  city            String?
  liveWithFamily  String?
  familyCity      String?
  maritalStatus   String?
  diet            String?
  height          String?
  subCommunity    String?
  qualification   String?
  collegeName     String?
  jobType         String?
  role            String?
  company         String?
  incomeRange     String?
  bio             String?
  profilePic      String?  // URL to Firebase Storage
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
